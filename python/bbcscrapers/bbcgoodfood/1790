on" itemscope itemtype="http://schema.org/NutritionInformation"><li><span class="nutrition__label">kcal</span><span class="nutrition__value" itemprop="calories">819</span></li><li><span class="nutrition__label">fat</span><span class="nutrition__value" itemprop="fatContent">42g</span></li><li><span class="nutrition__label">saturates</span><span class="nutrition__value" itemprop="saturatedFatContent">26g</span></li><li><span class="nutrition__label">carbs</span><span class="nutrition__value" itemprop="carbohydrateContent">78g</span></li><li><span class="nutrition__label">sugars</span><span class="nutrition__value" itemprop="sugarContent">12g</span></li><li><span class="nutrition__label">fibre</span><span class="nutrition__value" itemprop="fiberContent">3g</span></li><li><span class="nutrition__label">protein</span><span class="nutrition__value" itemprop="proteinContent">36g</span></li><li><span class="nutrition__label">salt</span><span class="nutrition__value" itemprop="sodiumContent">2.03g</span></li></ul></div></div></div> </section><div class="recipe-header__actions"><div class="flyout"><a href="/user/login" class="btn btn--primary btn--save btn--block btn--icon-right" rel="nofollow"><span class="btn__text">Save <span class="wide-only">to My Good Food</span></span></a><div class="flyout__content"><div class="flyout__content-inner">Please <a href="/user/login?destination=node/100409">sign in</a> or <a href="/user/register?destination=node/100409">register</a> to save recipes.</div></div></div><div class="recipe-header__print"> <a href="javascript:void(0)" class="btn btn--default btn--icon-right btn--print"> <span class="btn__text">Print</span> <i class="font-icon font-icon-print"></i> </a></div></div></div> </header><div class="grid-padding"><div class="col span8"><div id="ad-mpu-premium-1-narrow" class="ad-mpu-premium-1-narrow"><div class="ad ad--mpu-premium-1-narrow" id="ad-manager-ad-mpu_premium_1_narrow-f34af968b5"><script type="text/javascript">Drupal.GPT.creat